<h1>Follow Users</h1>

<table class="table table-hover">
<thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th>フォロー数</th>
    <th>フォロワー数</th>
    <th>フォローボタン</th>
    <th>showページへ</th>
  </tr>

</thead>
<% @user.followings.each do |user| %>
<tbody>
  <tr>

    <td><%= attachment_image_tag user, :profile_image, size:"50x50", fallback:"no_image.png", format:'png' %></td>
    <td>  <%= user.name %> </td>
    <td><%= user.followings.count%></td>
		<td><%= user.followers.count%></td>
		<td><%= render 'relationships/follow_button', user: user %></td>
    <td><%= link_to 'show', user_path(user) %></td>
  </tr>
  <% end %>
</tbody>
</table>
