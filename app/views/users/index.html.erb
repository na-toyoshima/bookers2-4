<br><br>
<div class = "container">
	<div class = "row">
		<div class = "col-xs-3">
			<%= render 'users/usercommon', user: @user %>
			<%= render 'books/bookcommon', book: @book %>
		</div>

		<div class = "col-xs-9">
			<h1>Users</h1>


			<table class="table table-hover">
				<thead>
					<tr>
					<th>image</th>
					<th>name</th>
					<th>フォロー数</th>
					<th>フォロワー数</th>
					<th>フォローボタン</th>
					<td>詳細ページへ
					</tr>
				</thead>

				<tbody>
					<tr>
						<% @users.each do |user| %>

						<td><%= attachment_image_tag user, :profile_image, size:"60x60", fallback:"no_image.png", format:'png' %></td>
						<td><%= user.name %></td>
						<td><%= user.followings.count%></td>
						<td><%= user.followers.count%></td>
						<td><%= render 'relationships/follow_button', user: user %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>
